{{#*inline "structured"}}
<script type="application/ld+json">
{
  "@content": "https://schema.org",
  "@type": "Review",

  "reviewRating": {
    "@type": "Rating",
    "ratingValue": "{{ context.page.frontMatter.rating }}"
  },

  "author": {
    "@type": "Person",
    "name": "Jens Reimann"
  },

  "itemReviewed": {
    "@type": "SoftwareApplication",
    "name": "{{ context.page.frontMatter.title }}",
    "image": "{{ absolute_url }}images/default.png",
    "operatingSystem": "ANDROID",
    "applicationCategory": "https://schema.org/GameApplication"
  }

}
</script>
{{/inline}}

{{#*inline "heading"}}
<div class="row">
  <div class="col-12 col-sm-6 col-xl-8">
    {{> game/heading context.page h="h1" l="p" lc="lead"}}
  </div>
  <div class="col-12 col-sm-6 col-xl-4 text-center text-sm-right">
    {{> game/play id=context.gameId class="img-fluid" style="height: 4rem;"}}
  </div>
</div>
{{/inline}}

{{#*inline "main"}}
<div class="container">
  {{ markdownify context.page.frontMatter.introduction }}
  {{> game/screenshots context.page }}
  {{ expand ( markdownify context.content ) }}
</div>
{{/inline}}

{{~> default~}}
