{{#*inline "title"}}
{{context.content.main.frontMatter.title}} &ndash; {{ compact.site.title }}
{{/inline}}

{{#*inline "heading"}}
{{> game/heading context h="h1" l="p" lc="lead"}}
{{/inline}}

{{#*inline "main"}}
<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-9">
      {{ markdownify context.content.main.frontMatter.introduction }}
    </div>
    <div class="col-md-4 col-lg-3">
      {{> game/play id=context.metadata.name class="img-fluid"}}
    </div>
  </div>
  
  {{> game/screenshots context.content.main }}
  {{ expand ( markdownify context.content.main.content ) }}
</div>
{{/inline}}
{{~> default~}}
