
<div class="container pt-3">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ relative_url "/" }}">HAG</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
{{#each compact.site.menu as |item|}}
                <li class="nav-item {{active item.url}}">
                    <a
                        class="nav-link"
                        href="{{ relative_url item.url }}">{{item.label}}{{#active item.url}} <span class="sr-only">(current)</span>{{/active}}</a>
                </li>
{{/each}}
            </ul>
        </div>
    </nav>

</div>

<div class="container py-4">

    <div class="row">
        <div class="col-md-6">
            {{>heading}}
        </div>
        <div class="col-md-6 mt-auto">
            <img src="{{ relative_url "/assets/images/header.svg" }}"/>
        </div>
    </div>

</div>
